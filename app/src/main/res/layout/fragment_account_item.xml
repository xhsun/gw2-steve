<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="65dp">

	<TextView
		android:id="@+id/account_invalid"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/invalid_key"
		android:textColor="@color/colorTextSecondaryLight"
		android:layout_gravity="top|center"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/account_name"
		android:maxLines="1"
		android:textSize="17sp"
		android:textStyle="bold"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginStart="10dp"
		android:layout_gravity="top|start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/colorTextPrimary"/>

	<RelativeLayout
		android:layout_marginStart="13dp"
		android:layout_marginLeft="13dp"
		android:layout_marginBottom="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|start">

		<TextView
			android:id="@+id/account_world"
			android:maxLines="1"
			android:textSize="15sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/account_access"
			android:maxLines="1"
			android:textSize="15sp"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/account_world"
			android:layout_toRightOf="@id/account_world"/>
	</RelativeLayout>

	<Button
		android:id="@+id/account_btn_undo"
		android:textSize="17sp"
		android:textStyle="bold"
		android:paddingTop="23dp"
		android:visibility="gone"
		android:textAllCaps="true"
		android:paddingBottom="22dp"
		android:text="@string/button_undo"
		android:layout_gravity="bottom|end"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@android:color/white"
		android:background="@color/colorRedAlert"
		style="@style/Base.Widget.AppCompat.Button.Borderless"/>


</FrameLayout>
