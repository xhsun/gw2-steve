<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context=".view.fragment.WikiFragment">
	<WebView
		android:id="@+id/wiki_webview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"/>

	<RelativeLayout
		android:id="@+id/wiki_progress_wrapper"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:visibility="gone">

		<TextView
			android:id="@+id/wiki_progress_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="@string/progress_text"
			android:textColor="@color/colorTextLight"/>

		<ProgressBar
			android:id="@+id/wiki_progress"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:layout_below="@+id/wiki_progress_txt"
			android:layout_centerHorizontal="true"
			android:padding="0dp"/>
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:background="@drawable/dropshadow"/>
</android.support.design.widget.CoordinatorLayout>
