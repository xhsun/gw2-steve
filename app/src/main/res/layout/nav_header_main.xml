<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="30dp"
	android:theme="@style/ThemeOverlay.AppCompat.Dark">

	<Button
		android:id="@+id/nav_change_account"
		android:layout_height="35dp"
		android:layout_width="35dp"
		android:background="@drawable/ic_menu_change"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"/>

	<TextView
		android:id="@+id/nav_account_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/nav_accounts"
		android:layout_toStartOf="@id/nav_change_account"
		android:layout_toLeftOf="@id/nav_change_account"
		android:layout_alignBaseline="@+id/nav_change_account"
		android:layout_alignBottom="@+id/nav_change_account"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:textStyle="bold"
		android:textSize="16sp"
		android:textColor="@color/colorTransWhite"
		android:textAllCaps="true"/>

	<Button
		android:id="@+id/nav_search"
		android:text="@string/nav_search"
		android:drawableStart="@drawable/ic_action_search"
		android:drawableLeft="@drawable/ic_action_search"
		android:textColor="@color/colorTransWhite"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimaryDark"
		android:layout_below="@+id/nav_account_name"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="15dp"
		android:paddingStart="15dp"
		android:paddingEnd="15dp"/>
</RelativeLayout>
